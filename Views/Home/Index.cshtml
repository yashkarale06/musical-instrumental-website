@{
    ViewData["Title"] = "Home Page";
}

<section class="hero">
    <div class="hero-content">
        <h2>Welcome to Musical Instrument Shop</h2>
        <p>Your one-stop shop for all musical instruments and accessories</p>
        <a asp-controller="Product" asp-action="Index" class="btn">Shop Now</a>
    </div>
</section>

<section class="featured-categories">
    <h2>Browse Categories</h2>
    <div class="category-grid">
        @foreach (var category in ViewBag.FeaturedCategories)
        {
            <div class="category">
                <div class="category-image">
                    <img src="https://via.placeholder.com/800x600?text=@category.Name" alt="@category.Name">
                </div>
                <h3>@category.Name</h3>
                <p>@category.Description</p>
                <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@category.CategoryId">Browse @category.Name</a>
            </div>
        }
    </div>
</section>

<section class="featured-products">
    <h2>Featured Products</h2>
    <div class="product-grid">
        @foreach (var product in ViewBag.FeaturedProducts)
        {
            <div class="product">
                <div class="product-image">
                    <img src="@product.ImageUrl" alt="@product.Name">
                </div>
                <h3>@product.Name</h3>
                <p>@product.Description</p>
                <p class="price">₹@product.Price.ToString("N0")</p>
                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" class="btn">View Details</a>
                <button class="add-to-cart" data-id="@product.ProductId">Add to Cart</button>
            </div>
        }
    </div>
</section>

<section class="services">
    <h2>Our Services</h2>
    <div class="service-grid">
        <div class="service">
            <div class="service-image">
                <img src="https://via.placeholder.com/800x600?text=Repair+Services" alt="Instrument Repair">
            </div>
            <h3>Instrument Repair</h3>
            <p>Professional repair services for all instruments</p>
            <a asp-controller="Repair" asp-action="Index">Learn More</a>
        </div>
        <div class="service">
            <div class="service-image">
                <img src="https://via.placeholder.com/800x600?text=Music+Lessons" alt="Music Lessons">
            </div>
            <h3>Music Lessons</h3>
            <p>Learn to play with our experienced teachers</p>
            <a href="#">Learn More</a>
        </div>
    </div>
</section>