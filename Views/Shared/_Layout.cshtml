<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Musical Instrument Shop</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="logo">
            <h1><a asp-controller="Home" asp-action="Index">Musical Instrument Shop</a></h1>
        </div>
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Product" asp-action="Index">Products</a></li>
                <li><a asp-controller="Home" asp-action="About">About</a></li>
                <li><a asp-controller="Repair" asp-action="Index">Repair Services</a></li>
            </ul>
        </nav>
        <div class="user-actions">
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <span class="welcome-user">Welcome, @User.Identity.Name!</span>
                <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                    <button type="submit" class="btn-logout">Logout</button>
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login">Login</a>
                <a asp-controller="Account" asp-action="Register">Register</a>
            }
            <a asp-controller="Cart" asp-action="Index">Cart (0)</a>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h3>Musical Instrument Shop</h3>
                <p>Your one-stop shop for all musical instruments and accessories</p>
            </div>
            <div class="footer-section">
                <h3>Quick Links</h3>
                <ul>
                    <li><a asp-controller="Home" asp-action="About">About Us</a></li>
                    <li><a href="#">FAQ</a></li>
                    <li><a href="#">Shipping Information</a></li>
                </ul>
            </div>
            <div class="footer-section">
                
                <p>123 Music Street, Melody City</p>
                <p>Phone: (123) 456-7890</p>
                <p>Email: info@musicalinstrumentshop.com</p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Musical Instrument Shop. All Rights Reserved.</p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>